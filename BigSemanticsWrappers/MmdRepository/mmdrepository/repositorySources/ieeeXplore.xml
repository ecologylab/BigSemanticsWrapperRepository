<meta_metadata_repository name="scienceDirect"
  package="ecologylab.bigsemantics.generated.library.ieeeXplore">

  <meta_metadata name="ieee_xplore_article" extends="scholarly_article" parser="xpath">
    <selector url_stripped="http://ieeexplore.ieee.org/xpl/articleDetails.jsp" />
    <selector url_stripped="http://ieeexplore.ieee.org:80/xpl/articleDetails.jsp" />
    <example_url url="http://ieeexplore.ieee.org/xpl/articleDetails.jsp?arnumber=1532126" />

    <filter_location>
      <strip_param name="navigation" />
      <strip_param name="reload" />
    </filter_location>

    <scalar name="title">
      <xpath>//h1</xpath>
    </scalar>
	<scaler name="description" hide="false">
		<xpath>//div[@class='article']//p</xpath>
	</scaler>
	<!-- Link to full article -->
    <composite name="rich_media">
      <scalar name="title">
        <xpath />
        <concatenate_values>
          <value>HTML full text</value>
        </concatenate_values>
      </scalar>
      <scalar name="location">
        <xpath>//a[@id='full-text-html']/@href</xpath>
      </scalar>
    </composite>
<!-- Opens up a IEEE search for those articles -->
    <composite name="author_page" type="ieee_author_page">
    	<xpath>//a[@id='abstract-authors-tab']</xpath>
    	<scalar name="title">
    		<xpath>.</xpath>
    	</scalar>
    	<scalar name="location">
    		<xpath>./@href</xpath>
    	</scalar>
    </composite>
    <collection name="articles_by_authors" child_type="ieee_xplore_search">
      <xpath>//div[@id='product-vitals']//script[contains(text(), 'authorLink(')]</xpath>
      <scalar name="title">
        <xpath>.</xpath>
        <regex_op regex="authorLink\(&quot;([^&quot;]+)&quot;\)" group="1" />
      </scalar>
      <scalar name="location" hide="true">
        <concatenate_values>
          <value>http://ieeexplore.ieee.org/search/searchresult.jsp?searchWithin=p_Authors:.QT.</value>
          <value from_scalar="title" />
          <value>.QT.</value>
        </concatenate_values>
      </scalar>
    </collection>

    <composite name="published_in" type="ieee_journal_page">
      <xpath>//div[@class='article-ftr']/a</xpath>
      <scalar name="title">
        <xpath>.</xpath>
      </scalar>
      <scalar name="location">
        <xpath>./@href</xpath>
      </scalar>
    </composite>

    <composite name="keyword_page" type="ieee_keywords">
    
    
      <xpath>//a[@id='abstract-keyword-tab']</xpath>
      <scalar name="title">
        <xpath>.</xpath>
      </scalar>
      <scalar name="location">
        <xpath>./@href</xpath>
      </scalar>
    </composite>

    <composite name="references_page" type="ieee_xplore_references">
      <xpath>//a[@id='abstract-references-tab']</xpath>
      <scalar name="title">
        <xpath>.</xpath>
      </scalar>
      <scalar name="location">
      	<xpath>./@href</xpath>
      </scalar>
    </composite>

    <composite name="cited_by" type="ieee_xplore_cited_by">
      <xpath>//a[@id='abstract-citedby-tab']</xpath>
      <scalar name="title">
      	<xpath>.</xpath>
      </scalar>
    
      <scalar name="location">
        <xpath>./@href</xpath>
      </scalar>
    </composite>

    <scalar name="doi" scalar_type="ParsedURL" hide="true"
      comment="The digital object identifier of the article">
      <xpath>//a[starts-with(@href, 'http://dx.doi.org/10.1109/')]/@href</xpath>
    </scalar>
  </meta_metadata>

  <meta_metadata name="ieee_author_page" extends="author" parser="xpath">
  <selector url_stripped="http://ieeexplore.ieee.org/xpl/abstractAuthors.jsp" />
	  <selector url_stripped="http://ieeexplore.ieee.org:80/xpl/abstractAuthors.jsp" />
  	<collection name="authors" child_type="compound_document">
  		<xpath>//div[@id='abstractAuthors']//a</xpath>
  		<scalar name="title">
  			<xpath>./span[@id='preferredName']/@class</xpath>
  		</scalar>
  		<scalar name="location">
  			<xpath>./span[@id='authorId']/@class</xpath>
  			<regex_op regex="^" replace="http://ieeexplore.ieee.org/search/searchresult.jsp?searchWithin=p_Author_Ids:"/>
  		</scalar>
  	
  	</collection>
   </meta_metadata>
  <meta_metadata name="ieee_xplore_references" extends="compound_document" parser="xpath">
    <selector url_stripped="http://ieeexplore.ieee.org/xpl/abstractReferences.jsp" />
	  <selector url_stripped="http://ieeexplore.ieee.org:80/xpl/abstractReferences.jsp" />
	
    <collection name="references" child_type="scholarly_article">
      <xpath>//ol[@class='docs']/li</xpath>
      <scalar name="title">
        <xpath>.</xpath>
      </scalar>
      <scalar name="location">
        <xpath>.//a[1]/@href</xpath>
      </scalar>
    </collection>
  </meta_metadata>


  <meta_metadata name="ieee_xplore_cited_by" extends="compound_document" parser="xpath">
    <selector url_stripped="http://ieeexplore.ieee.org/xpl/abstractCitations.jsp" />

    <scalar name="ieee_xplore_id" scalar_type="String" hide="true" />

    <collection name="citations" child_type="scholarly_article">
      <xpath>//ol[@id='Ieee_citations']/li</xpath>
      <scalar name="title">
        <xpath>./i</xpath>
      </scalar>
      <scalar name="location">
        <xpath>./div/a[1]/@href</xpath>
      </scalar>
    </collection>
  </meta_metadata>

<meta_metadata name="ieee_journal_page" extends="compound_document" parser="xpath">
   <selector url_stripped="http://ieeexplore.ieee.org/xpl/mostRecentIssue.jsp" />
   <selector url_stripped="http://ieeexplore.ieee.org:80/xpl/mostRecentIssue.jsp" />
	<scalar name="title">
		<xpath>//h1</xpath>
	</scalar>
	<collection name="top_articles" child_type="ieee_xplore_article">
      <xpath>//ul[@class='results']/li</xpath>
      <scalar name="title">
        <xpath>.//h3</xpath>
      </scalar>
      <scalar name="location">
        <xpath>.//h3/a/@href</xpath>
      </scalar>
    </collection>

</meta_metadata>
<meta_metadata name="ieee_keywords" extends="compound_document" parser="xpath">
	<selector url_stripped="http://ieeexplore.ieee.org/xpl/abstractKeywords.jsp" />
	<selector url_stripped="http://ieeexplore.ieee.org:80/xpl/abstractKeywords.jsp" />
	<collection name="keywords" child_type="ieee_xplore_search">
		<xpath>//div[@id='abstractKeywords']//li</xpath>
		<scalar name="title">
			<xpath>.</xpath>
		</scalar>
		<scalar name="location">
			<concatenate_values>
	          <value>http://ieeexplore.ieee.org/search/searchresult.jsp?searchWithin=Search_Index_Terms:</value>
	          <value from_scalar="title" />
	          
	        </concatenate_values>
			<regex_op regex=" " replace="+"/>
		</scalar>
				
	</collection>
</meta_metadata>
  <meta_metadata name="ieee_xplore_search" extends="search" parser="xpath">
    <generic_type_var name="SR" arg="ieee_xplore_article" />

    <selector url_stripped="http://ieeexplore.ieee.org/search/searchresult.jsp" />
    <selector url_stripped="http://ieeexplore.ieee.org:80/search/searchresult.jsp" />

    <filter_location>
      <strip_param name="newSearch" />
      <strip_param name="x" />
      <strip_param name="y" />
    </filter_location>
	<scalar name="query" >
		<xpath>//strong[@class='search-term']</xpath>
		<regex_op regex="Index Terms:" replace=""/>
		<regex_op regex="Authors:" replace=""/>
	</scalar>
    <collection name="search_results">
      <xpath>//ul[@class='Results']/li</xpath>
      <scalar name="title">
        <xpath>.//h3</xpath>
      </scalar>
      <scalar name="location">
        <xpath>.//h3/a/@href</xpath>
      </scalar>
    </collection>
  </meta_metadata>
 
  <meta_metadata name="ieee_article_body" parser="xpath" extends="compound_document">
    <selector url_stripped="http://ieeexplore.ieee.org/xpls/icp.jsp" />
    <selector url_stripped="http://ieeexplore.ieee.org:80/xpls/icp.jsp" />
    <collection name="sections" child_extends="compound_document">
    	<xpath>//div[@class='section']</xpath>
    	<scalar name="title">
    		<xpath>./div/h2</xpath>
    	</scalar>
    	<collection name="paragraphs" child_scalar_type="String">
    		<xpath>./p</xpath>
    	</collection>
    </collection>
  </meta_metadata>
  
